     <% else %>
       <%= link_to ' Login ', login_path %>|
       <%= link_to ' Home ', '/ '%>|
       <%= link_to ' Register ', '/pages/new' %>

     <% end %>
   </nav>
   <%= yield %>
 </body>

</html>
